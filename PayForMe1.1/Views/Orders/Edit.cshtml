@model PayForMe1._1.Models.Order

@{
    ViewData["Title"] = "Editing Order";
}
<br />
<form asp-action="Edit" class="row g-3">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="OrderId" />
    <div class="col-md-12">
        <h3 class="text-center"> User Name </h3>
    </div>
    <div class="col-md-1">
        @*space*@
    </div>
    <div class="col-md-9">
        <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
    </div>
    <div class="col-md-2">
        @*space*@
    </div>
    <div class="col-md-12">
        @*new line*@
    </div>
    <div class="col-md-12">
        <h3 class="text-center"> Service </h3>
    </div>
    <div class="col-md-1">
        @*space*@
    </div>
    <div class="col-md-3 MainService">
        <select asp-for="MainServiceId" class="form-control" asp-items="ViewBag.MainServiceId"></select>
    </div>
    @*asp-items="ViewBag.MiddleServiceId"*@
    <div class="col-md-3 MiddleService">
        @{
            if(Model.MiddleServiceId != null)
            {
                <select asp-for="MiddleServiceId" class="form-control" asp-items="ViewBag.MiddleServiceId"></select>
            }
        }
    </div>
    @*asp-items="ViewBag.LastServiceId"*@
    <div class="col-md-3 LastService">
        @{
            if (Model.LastServiceId != null)
            {
                <select asp-for="LastServiceId" class="form-control" asp-items="ViewBag.LastServiceId"></select>
            }
        }
    </div>
    <div class="col-md-2">
        @*space*@
    </div>
    <div class="col-md-1">
        @*space*@
    </div>
    <div class="col-md-3">
        <input asp-for="Cost" class="form-control" placeholder="Cost" />
        <span asp-validation-for="Cost" class="text-danger"></span>
    </div>
    <div class="col-md-3">
        <input asp-for="Tax" class="form-control" placeholder="Tax" />
        <span asp-validation-for="Tax" class="text-danger"></span>
    </div>
    <div class="col-md-3">
        <input asp-for="Total" class="form-control" placeholder="Total" />
        <span asp-validation-for="Total" class="text-danger"></span>
    </div>
    <div class="col-md-12">
        @*new line*@
    </div>
    <div class="col-md-12">
        <h3 class="text-center"> User Service Number </h3>
    </div>
    <div class="col-md-1">
        @*space*@
    </div>
    <div class="col-md-3">
        <input asp-for="PhoneNumber" class="form-control" placeholder="Phone Number" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <div class="col-md-3">
        <input asp-for="LandLineNumber" class="form-control" placeholder="Land Line Number" />
        <span asp-validation-for="LandLineNumber" class="text-danger"></span>
    </div>
    <div class="col-md-3 form-check">
        <label class="form-check-label">
            <input class="form-check-input" asp-for="IsDebt" /> @Html.DisplayNameFor(model => model.IsDebt)
        </label>
    </div>
    <div class="col-md-2">
        @*space*@
    </div>
    <div class="col-md-1">
        @*space*@
    </div>
    <div class="col-md-9">
        <input type="datetime" asp-for="OrderDate" class="form-control"/>
        <span asp-validation-for="OrderDate" class="text-danger"></span>
    </div>
    <div class="col-md-2">
        @*space*@
    </div>
    <div class="col-md-1">
        @*space*@
    </div>
    <div class="form-group col-md-9">
        <input type="submit" value="Save" class="btn btn-primary col-md-12" />
    </div>
    <div class="col-md-2">
        @*space*@
    </div>
</form>

@section Scripts {

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
